@{
    ViewBag.Title = "Home";
}

@{
    Layout = "~/Views/Shared/BooksLayout.cshtml";
}
@{
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");

    }
}
<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-warning " style=" margin-top:100px">
            <div class="panel-heading">
                <h3 class="panel-title">Add Books</h3>
            </div>
            <div class="panel-body">
                <div class="col-lg-8 col-lg-offset-2">
                    <form role="form" class="form-horizontal" action="/AddBooks/getBooks" onsubmit="return validate()" method="post">

                        <div class="form-group has-success">
                            <label for="user" class="col-lg-2 control-label">Book Name:</label>
                            <div class="col-lg-5">
                                <input type="text" class="form-control" name="cname" id="books"
                                       placeholder="Enter book name" onkeyup="a()">
                            </div>
                            <p id="error1"></p>
                        </div>

                        <div class="form-group has-success">
                            <label for="name" class="col-lg-2 control-label">ISBN</label>
                            <div class="col-lg-5">
                                <input type="text" class="form-control" name="isbn" id="isbn" placeholder="XXXX" onkeyup="b()" maxlength="4">
                            </div>
                            <p id="error2"></p>
                        </div>




                        <div class="form-group has-success">
                            <label for="gender" class="col-lg-2 control-label">Category</label>
                            <div class="col-lg-5">
                                <select class="form-control has" name="catName">
                                    @{
                                        foreach (var r in ViewBag.a)
                                        {
                                            
                                             <option value="@r.name">@r.name</option>
                                        }
                                    }
                                   
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-group ">
                                <div class="col-lg-5 col-lg-offset-2 btn-group" style="margin-left: 18%;">
                                    <input type="submit" class="btn btn-success ">
                                    <input type="reset" class="btn btn-default ">
                                </div>
                            </div>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
