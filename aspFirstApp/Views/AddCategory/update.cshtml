@using aspFirstApp.Models
@{
    ViewBag.Title = "categoryForm";
}

@{
    Layout = "~/Views/Shared/BooksLayout.cshtml";
}
@{
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");

    }
}
<div class="row">
    <div class="col-lg-8 col-lg-offset-2" style="margin-top:120px;">
    </div>
    <div class="col-lg-8 col-lg-offset-2">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h3 class="panel-title">Add Category</h3>
            </div>
            <div class="panel-body">
               
                   <form role="form" class="form-horizontal" onsubmit="return validate()" action="/AddCategory/updated?p=@ViewBag.a.Id" method="post">
                    <div class="form-group has-success">
                        <label for="user" class="col-lg-2 control-label">Catetory</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="name" placeholder="Catetory name" id="books" value="@ViewBag.a.name" onkeyup="a()">
                        </div>
                        <p id="error1"></p>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-3 col-lg-offset-2 btn-group" style="margin-left: 17%;">
                            <input type="submit" value="Updated" class="btn btn-success ">
                            <input type="reset" class="btn btn-default ">
                            
                        </div>
                        
                    </div>
                </form>
                 
            </div>
        </div>
    </div>
    </div>

