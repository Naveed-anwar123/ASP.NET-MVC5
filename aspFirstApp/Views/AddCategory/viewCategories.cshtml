
@{
    ViewBag.Title = "viewCategories";
    Layout = "~/Views/Shared/BooksLayout.cshtml";
}

@{
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");

    }
}
<div class="col-lg-7 col-lg-offset-2">
    <div class="panel panel-warning" style=" margin-top:100px">
        <div class="panel-heading">
            <h3 class="panel-title">View Categories</h3>
        </div>
        <div class="panel-body">

            <div class="table-responsive margin" style="width: 700px; margin-left: 30px">
                <table class="table  table-hover table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
@{
    foreach (var r in ViewBag.a)
    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.name</td>
                            <td>
                                
                               <!-- <a href="/AddCategory/delete?p=@r.Id" class="btn btn-success ">Delete</a> -->
                                <a href="/AddCategory/update?p=@r.Id" class="btn btn-default">Update</a>
                                
                            </td>
                        </tr>
    }
}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



