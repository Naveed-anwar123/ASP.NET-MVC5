
@{
    ViewBag.Title = "viewRequest";
    Layout = "~/Views/Shared/BooksLayout.cshtml";
}
@{
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");

    }
}
<div class="col-lg-8 col-lg-offset-2" style="margin-top:8%">
    <div class="panel panel-warning">
        <div class="panel-heading">
            <h3 class="panel-title">Create Your Account</h3>
        </div>
        <div class="panel-body">


            <div class="table-responsive margin" style="width: 800px; margin-left: 20px;">
                <table class="table  table-hover table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>User Email</th>
                            <th>Book name</th>
                            <th>Status</th>
                            
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{
                            foreach(var request in Model)
                            {
                             <tr>
                                 <td>@request.Id</td>
                                 <td>@request.email</td>
                                 <td>@request.Book.cname</td>
                                 

                                 <td>@request.status </td>
                            <td class="btn-group">
                                <a href="/ViewUserRequest/accept?p=@request.Id" class="btn btn-success ">Accept</a>
                                <a href="/ViewUserRequest/reject?p=@request.Id" class="btn btn-default ">Reject</a>
                            </td>
                        </tr>
                            }
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

