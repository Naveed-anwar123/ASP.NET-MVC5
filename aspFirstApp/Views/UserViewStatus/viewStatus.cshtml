@using aspFirstApp.Models
@{
    ViewBag.Title = "viewStatus";
    Layout = "~/Views/Shared/UserHome.cshtml";
}
@{
    if (Session["name"] == null)
    {
        Response.Redirect("~/Login/Index");

    }
}
<div class="col-lg-8 col-lg-offset-2" style="margin-top:100px;" id="i">
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">VIEW REQUEST STATUS</h3>
        </div>
        <div class="panel-body">
        
            <div class="table-responsive margin" style="width: 800px; margin-left: 20px">
                <table class="table  table-hover table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>ISBN</th>
                            
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>



                      
                        @{
                            foreach(var request in Model)
                            {
                         if(request.email == @Session["name"].ToString())
                         {
                            <tr>
                            <td>@request.Id</td>
                            <td>@request.Book.cname</td>
                            <td>@request.Book.isbn</td>
                            
                            <td>@request.status </td>
                        </tr>     
                         }
                        
                            }
                        }

                        
                       




                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>