
@{
    ViewBag.Title = "Home1";
}

@{
    Layout = "~/Views/Shared/SingupLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-lg-offset-2 ">
        <div class="panel panel-success ">
            <div class="panel-heading">
                <h3 class="panel-title">Create Your Account</h3>
            </div>
            <div class="panel-body">
                <form role="form" class="form-horizontal" action="/Signup/signUpData" onsubmit="return validate()" method="post" name="form">
                    <div class="form-group has-success" id="c">
                        <label for="name" class="col-lg-2 control-label">First name:</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="fname" id="first" placeholder="First name"
                                   onkeyup="a()">
                        </div>
                        <p id="error1"></p>
                    </div>

                    <div class="form-group has-success">
                        <label for="lname" class="col-lg-2 control-label">Last name:</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" name="lname" id="lname" placeholder="Last name" onkeyup="b()">
                        </div>
                        <p id="error2"></p>
                    </div>



                    <div class="form-group has-success">
                        <label for="user" class="col-lg-2 control-label">Rollno:</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" onblur="c()" name="roll" id="user" placeholder="Rollno">
                        </div>
                        <p id="error3"></p>
                    </div>


                    <div class="form-group has-success">
                        <label for="gender" class="col-lg-2 control-label">Batch</label>
                        <div class="col-lg-5">
                            <select class="form-control has" name="batch">
                                <option>
                                    F14
                                </option>
                                <option>
                                    F13
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group has-success">
                        <label for="gender" class="col-lg-2 control-label">Gender</label>
                        <div class="col-lg-5">
                            <select class="form-control has" name="gender">
                                <option>
                                    Male
                                </option>
                                <option>
                                    Female
                                </option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group has-success">
                        <label for="email" class="col-lg-2 control-label">Email Address</label>
                        <div class="col-lg-5">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email address" onblur="validateEmail()">
                        </div>
                        <p id="error5"></p>
                    </div>
                    <div class="form-group has-success">
                        <label for="pass" class="col-lg-2 control-label">Password</label>
                        <div class="col-lg-5">
                            <input type="password" name="pass" id="pass" class="form-control" placeholder="Password" onblur="validatepass()">
                        </div>
                        <p id="error6"></p>
                    </div>
                    <div class="form-group has-success">
                        <label for="pass" class="col-lg-2 control-label">Confirm password</label>
                        <div class="col-lg-5">
                            <input type="password" name="cpass" id="pass1" class="form-control" placeholder="Confirm password" onblur="confirmpass()">
                        </div>
                        <p id="error7"></p>
                    </div>
                    <div class="form-group ">
                        <div class="col-lg-4 col-lg-offset-2 btn-group">
                            <input type="submit" value="sign up" class="btn btn-success ">
                            <input type="reset" class="btn btn-default ">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


